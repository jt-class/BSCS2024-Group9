<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notalia.SettingPage"
             Title="Settings">


	<StackLayout BackgroundColor="White" Padding="20" VerticalOptions="Center">
		<Label Text="Settings"
               FontSize="32"
               FontAttributes="Italic"
               HorizontalOptions="Center"
               TextColor="#2c3e50" />

		<Button Text="Profile"
                Clicked="OnProfileClicked"
                BackgroundColor="#cad0b7"
                TextColor="Black"
                WidthRequest="393"
                HeightRequest="100"
                CornerRadius="20"
                Opacity="1"
                HorizontalOptions="Center" />

		<Button Text="Log Out"
                Clicked="OnLogOutClicked"
                BackgroundColor="#cad0b7"
                TextColor="Black"
                WidthRequest="393"
                HeightRequest="100"
                CornerRadius="20"
                Opacity="1"
                HorizontalOptions="Center" />

		<Button Text="About Us"
                Clicked="OnAboutUsClicked"
                BackgroundColor="#cad0b7"
                TextColor="Black"
                WidthRequest="393"
                HeightRequest="100"
                CornerRadius="20"
                Opacity="1"
                HorizontalOptions="Center" />

		<Button Text="Help"
                Clicked="OnHelpClicked"
                BackgroundColor="#cad0b7"
                TextColor="Black"
                WidthRequest="393"
                HeightRequest="100"
                CornerRadius="20"
                Opacity="1"
                HorizontalOptions="Center" />
	</StackLayout>
</ContentPage>
